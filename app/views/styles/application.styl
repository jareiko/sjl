html, body
  overflow hidden
  width 100%
  height 100%
  padding 0
  margin 0

.splash
  display none
  position absolute
  text-align center
  width 100%
  height 100%

canvas
  width 100%
  height 100%
  image-rendering -webkit-optimize-contrast
  image-rendering -webkit-crisp-edges
  image-rendering -webkit-pixelated
  image-rendering crisp-edges
